<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:apps="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ripple_effect"
                android:clickable="true">

    <CheckBox
        android:id="@+id/autoChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:buttonTint="@color/default_color"
        android:clickable="false"
        android:enabled="false"/>

    <net.geekstools.imageview.customshapes.ShapesImage xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/autoChoice"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        apps:shapeDrawable="@drawable/square_icon"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/icon"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingTop="2dp"
        android:paddingEnd="11dp"
        android:paddingBottom="2dp"
        android:text="@string/app_name"
        android:textColor="@color/dark"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/icon"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:paddingTop="2dp"
        android:paddingEnd="11dp"
        android:paddingBottom="2dp"
        android:text="@string/app_name"
        android:textColor="@color/dark_transparent"
        android:textSize="12sp"
        android:visibility="invisible"/>

</RelativeLayout>