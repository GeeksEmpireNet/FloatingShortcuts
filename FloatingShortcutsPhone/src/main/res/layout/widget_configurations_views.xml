<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_transparent_high"
    tools:context="net.geekstools.floatshort.PRO.Widget.WidgetConfigurations">

    <ScrollView
        android:id="@+id/configuredWidgetNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="37dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/scrollRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="37dp"
            android:paddingBottom="57dp"
            android:paddingEnd="15dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/configuredWidgetList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:layout_marginTop="7dp"
                android:paddingBottom="51dp"
                android:alwaysDrawnWithCache="true"
                android:drawSelectorOnTop="true"
                android:isScrollContainer="false"
                android:listSelector="@color/default_color_transparent_twice"
                android:nestedScrollingEnabled="false"
                android:persistentDrawingCache="animation|scrolling"
                android:saveEnabled="true"/>
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/nestedIndexScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/configuredWidgetNestedScrollView"
        android:foregroundGravity="center_vertical"
        android:background="@android:color/transparent"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/side_index"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@android:color/transparent"
            android:orientation="vertical" />
    </ScrollView>

    <net.geekstools.imageview.customshapes.ShapesImage xmlns:apps="http://schemas.android.com/apk/res-auto"
        apps:shapeDrawable="@drawable/ic_bulb"
        android:id="@+id/recoverFloatingCategories"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/draw_recovery"
        android:visibility="gone"
        android:contentDescription="@string/recover_category" />

    <net.geekstools.imageview.customshapes.ShapesImage xmlns:apps="http://schemas.android.com/apk/res-auto"
        apps:shapeDrawable="@drawable/ic_bulb"
        android:id="@+id/recoverFloatingApps"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/draw_recovery"
        android:visibility="gone"
        android:contentDescription="@string/recover_apps" />

    <LinearLayout
        android:id="@+id/switchFloating"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/switchCategories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:ellipsize="start"
            android:singleLine="true"
            android:textAllCaps="false"
            android:text="@string/categoryHint"
            android:textSize="19sp"
            android:fontFamily="@font/upcil"
            apps:elevation="7dp"
            apps:cornerRadius="7dp"
            apps:backgroundTint="@color/default_color" />

        <com.google.android.material.button.MaterialButton xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/switchApps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:ellipsize="start"
            android:singleLine="true"
            android:textAllCaps="false"
            android:text="@string/floatingHint"
            android:textSize="19sp"
            android:fontFamily="@font/upcil"
            apps:elevation="7dp"
            apps:cornerRadius="7dp"
            apps:backgroundTint="@color/default_color" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recoveryAction"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="61dp"
        android:gravity="center"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="@string/recover_widgets"
        android:textColor="@color/light"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:fontFamily="@font/upcil"
        apps:elevation="3dp"
        apps:backgroundTint="@color/default_color"
        apps:rippleColor="@color/light"
        apps:cornerRadius="57dp"
        apps:icon="@drawable/w_recovery_widgets"
        apps:iconGravity="start"
        apps:iconSize="29dp"
        apps:iconPadding="1dp" />

    <!-- Search Engine -->
    <com.google.android.material.textfield.TextInputLayout xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:id="@+id/textInputSearchView"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/switchFloating"
        android:layout_marginBottom="3dp"
        android:gravity="center|start"
        android:imeOptions="actionSearch"
        android:hint="@string/searchHint"
        android:textColorHint="@color/default_color_light"
        android:visibility="invisible"
        apps:boxBackgroundMode="outline"
        apps:boxBackgroundColor="@android:color/transparent"
        apps:boxCornerRadiusTopStart="51dp"
        apps:boxCornerRadiusTopEnd="51dp"
        apps:boxCornerRadiusBottomStart="51dp"
        apps:boxCornerRadiusBottomEnd="51dp"
        apps:boxStrokeColor="@color/default_color"
        apps:boxStrokeWidth="2dp"
        apps:boxStrokeWidthFocused="2dp"
        apps:hintTextColor="@color/default_color_light"
        apps:errorEnabled="true"
        apps:errorTextColor="@color/yellow">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:gravity="center|start"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:inputType="textAutoComplete|textCapWords"
            android:maxLines="1"
            android:textSize="17sp"
            android:textColor="@color/light"
            android:cursorVisible="true"
            android:drawableEnd="@drawable/search_engine_icon"
            android:drawableTint="@color/default_color_light"
            android:drawablePadding="3dp"
            android:dropDownAnchor="@id/searchView"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/switchFloating"
        android:layout_marginBottom="3dp"
        android:visibility="invisible"
        android:background="@drawable/search_icon"/>

    <ImageView
        android:id="@+id/searchFloatIt"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/switchFloating"
        android:layout_toEndOf="@id/textInputSearchView"
        android:padding="7dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@drawable/search_icon_float_it"/>

    <ImageView
        android:id="@+id/searchClose"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/switchFloating"
        android:layout_toStartOf="@id/textInputSearchView"
        android:padding="7dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        android:tint="@color/default_color_game_light"
        android:visibility="invisible"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>
    <!-- Search Engine -->

    <ScrollView
        android:id="@+id/installedNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="37dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:background="@color/dark_transparent"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="43dp"
            android:paddingBottom="35dp">

            <TextView
                android:id="@+id/widgetPickerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:gravity="center_vertical"
                android:textSize="19sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/installedWidgetList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/widgetPickerTitle"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="13dp"
                android:paddingBottom="51dp"
                android:alwaysDrawnWithCache="true"
                android:drawSelectorOnTop="true"
                android:isScrollContainer="false"
                android:listSelector="@color/default_color_transparent_twice"
                android:nestedScrollingEnabled="false"
                android:persistentDrawingCache="animation|scrolling"
                android:saveEnabled="true"/>
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/installedNestedIndexScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/installedNestedScrollView"
        android:foregroundGravity="center_vertical"
        android:background="@android:color/transparent"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/installed_side_index"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:background="@android:color/transparent"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:id="@+id/addWidget"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_marginStart="7dp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/draw_pref_add_widget" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fullActionViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_light"
        android:visibility="invisible">

        <com.google.android.material.button.MaterialButton xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/automationAction"
            android:layout_width="247dp"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="61dp"
            android:gravity="center"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/automation"
            android:textAllCaps="false"
            android:textColor="@color/light"
            android:textSize="19sp"
            android:fontFamily="@font/upcil"
            apps:elevation="3dp"
            apps:backgroundTint="@color/default_color"
            apps:rippleColor="@color/light"
            apps:cornerRadius="57dp"
            apps:icon="@drawable/w_floating"
            apps:iconGravity="start"
            apps:iconSize="29dp"
            apps:iconPadding="1dp" />

        <Button
            android:id="@+id/preferences"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerInParent="true"
            android:background="@drawable/draw_pref_action"
            android:visibility="invisible" />

        <com.google.android.material.button.MaterialButton xmlns:apps="http://schemas.android.com/apk/res-auto"
            android:id="@+id/reconfigure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="13dp"
            android:layout_marginBottom="53dp"
            android:textAllCaps="false"
            android:text="@string/reconfiguringWidgets"
            android:textColor="@color/light"
            android:textSize="29sp"
            android:fontFamily="@font/upcil_bold"
            apps:elevation="13dp"
            apps:cornerRadius="7dp"
            apps:backgroundTint="@color/default_color_game_light"
            apps:rippleColor="@color/default_color"
            apps:icon="@drawable/reconfiguring_icon"
            apps:iconSize="27dp"
            apps:iconTint="@color/light"
            apps:iconGravity="textStart" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/actionButton"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/draw_pref_action" />

    <TextView
        android:id="@+id/popupIndex"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_toStartOf="@id/nestedIndexScrollView"
        android:gravity="center"
        android:textColor="@color/light"
        android:textSize="29sp"
        android:typeface="monospace"
        android:background="@drawable/ic_launcher_balloon"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/loadingSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/loadLogo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:src="@drawable/draw_floating_widgets" />

        <ProgressBar
            android:id="@+id/loadingProgressltr"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-15dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"/>

        <TextView
            android:id="@+id/gx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="79dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="7dp"
            android:shadowColor="@android:color/black"
            android:shadowRadius="25"
            android:text="@string/floatingWidget"
            android:textColor="@color/default_color"
            android:textSize="53sp"/>
    </RelativeLayout>

</RelativeLayout>
