<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchItem"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:layout_alignParentEnd="true"
    android:background="@drawable/popup_shortcut_whole"
    android:visibility="visible">

    <net.geekstools.imageview.customshapes.ShapesImage
        app:shapeDrawable="@drawable/squircle_icon"
        android:id="@+id/itemAppIcon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/itemAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/itemAppIcon"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/app_name"
        android:textColor="@color/darker"
        android:textSize="13sp"/>
</RelativeLayout>
