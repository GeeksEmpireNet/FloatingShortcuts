<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_transparent_high">

    <HorizontalScrollView
        android:id="@+id/freqList"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-3.5dp"
        android:background="@drawable/layer_freq"
        android:cacheColorHint="@android:color/transparent"
        android:fadeScrollbars="true"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="37dp"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:requiresFadingEdge="horizontal"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbHorizontal="@color/dark_transparent_high"
        android:scrollbars="horizontal"
        android:smoothScrollbar="true"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/freqItem"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp"/>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/freqList"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="37dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:smoothScrollbar="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="31dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alwaysDrawnWithCache="true"
                android:drawSelectorOnTop="true"
                android:isScrollContainer="false"
                android:listSelector="@color/transparent_default"
                android:nestedScrollingEnabled="false"
                android:paddingStart="3dp"
                android:paddingTop="5dp"
                android:paddingEnd="27dp"
                android:persistentDrawingCache="animation|scrolling"
                android:saveEnabled="true"/>
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/freqList"
        android:layout_alignEnd="@id/nestedScrollView"
        android:foregroundGravity="center_vertical">

        <LinearLayout
            android:id="@+id/side_index"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:orientation="vertical"/>
    </ScrollView>


    <LinearLayout
        android:id="@+id/switchFloating"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="5dp"
        android:paddingEnd="29dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchWidgets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/draw_shortcuts"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="@string/widgetHint"
            app:elevation="7dp"
            app:cornerRadius="7dp"
            app:backgroundTint="@color/default_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchCategories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/draw_categories"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:text="@string/categoryHint"
            app:elevation="7dp"
            app:cornerRadius="7dp"
            app:backgroundTint="@color/default_color" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recoveryAction"
        android:layout_width="237dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="67dp"
        android:gravity="center"
        android:ellipsize="end"
        android:text="@string/recoveryShortcuts"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/light"
        app:elevation="3dp"
        app:backgroundTint="@color/default_color"
        app:rippleColor="@color/light"
        app:cornerRadius="57dp"
        app:icon="@drawable/w_recovery"
        app:iconGravity="start"
        app:iconSize="31dp"
        app:iconPadding="1dp" />

    <RelativeLayout
        android:id="@+id/fullActionViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_light"
        android:visibility="invisible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/automationAction"
            android:layout_width="237dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="67dp"
            android:gravity="center"
            android:ellipsize="end"
            android:text="@string/automation"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/light"
            app:elevation="3dp"
            app:backgroundTint="@color/default_color"
            app:rippleColor="@color/light"
            app:cornerRadius="57dp"
            app:icon="@drawable/w_floating"
            app:iconGravity="start"
            app:iconSize="31dp"
            app:iconPadding="1dp" />

        <Button
            android:id="@+id/preferences"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerInParent="true"
            android:background="@drawable/draw_pref_action"
            android:visibility="invisible" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/actionButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/draw_pref_action" />

    <RelativeLayout
        android:id="@+id/loadingSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/loadLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher_layer"/>

        <ProgressBar
            android:id="@+id/loadingProgressltr"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-15dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"/>
    </RelativeLayout>

</RelativeLayout>