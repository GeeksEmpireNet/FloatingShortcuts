<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wholeWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_transparent_high"
    tools:context="net.geekstools.floatshort.PRO.Widget.WidgetConfigurations">

    <ScrollView
        android:id="@+id/configuredWidgetNestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="37dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/scrollRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="31dp"
            android:paddingBottom="51dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/configuredWidgetList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="3dp"
                android:alwaysDrawnWithCache="true"
                android:drawSelectorOnTop="true"
                android:isScrollContainer="false"
                android:listSelector="@color/transparent_default"
                android:nestedScrollingEnabled="false"
                android:persistentDrawingCache="animation|scrolling"
                android:saveEnabled="true"/>
        </RelativeLayout>
    </ScrollView>

    <net.geekstools.imageview.customshapes.ShapesImage
        app:shapeDrawable="@drawable/ic_bulb"
        android:id="@+id/recoverFloatingCategories"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/draw_recovery"
        android:visibility="gone"
        android:contentDescription="@string/recover_category" />

    <net.geekstools.imageview.customshapes.ShapesImage
        app:shapeDrawable="@drawable/ic_bulb"
        android:id="@+id/recoverFloatingApps"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/draw_recovery"
        android:visibility="gone"
        android:contentDescription="@string/recover_apps" />

    <LinearLayout
        android:id="@+id/switchFloating"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchApps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/draw_shortcuts"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="@string/floatingHint"
            app:elevation="7dp"
            app:cornerRadius="7dp"
            app:backgroundTint="@color/default_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/switchCategories"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/draw_categories"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="@string/categoryHint"
            app:elevation="7dp"
            app:cornerRadius="7dp"
            app:backgroundTint="@color/default_color" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recoveryAction"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="53dp"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/recover_widgets"
        android:textColor="@color/light"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        android:textAllCaps="false"
        app:elevation="3dp"
        app:backgroundTint="@color/default_color"
        app:rippleColor="@color/light"
        app:cornerRadius="57dp"
        app:icon="@drawable/w_recovery_widgets"
        app:iconGravity="start"
        app:iconSize="31dp"
        app:iconPadding="1dp" />


    <ScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="37dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:background="@color/dark_transparent"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:paddingBottom="51dp">

            <TextView
                android:id="@+id/widgetPickerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"
                android:gravity="center_vertical"
                android:textSize="19sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/widgetPickerTitle"
                android:alwaysDrawnWithCache="true"
                android:drawSelectorOnTop="true"
                android:isScrollContainer="false"
                android:listSelector="@color/transparent_default"
                android:nestedScrollingEnabled="false"
                android:persistentDrawingCache="animation|scrolling"
                android:saveEnabled="true"/>
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/addWidget"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/draw_pref_add_widget" />

    <RelativeLayout
        android:id="@+id/fullActionViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_light"
        android:visibility="invisible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/automationAction"
            android:layout_width="247dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="53dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/automation"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/light"
            app:elevation="3dp"
            app:backgroundTint="@color/default_color"
            app:rippleColor="@color/light"
            app:cornerRadius="57dp"
            app:icon="@drawable/w_floating"
            app:iconGravity="start"
            app:iconSize="31dp"
            app:iconPadding="1dp" />

        <Button
            android:id="@+id/preferences"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerInParent="true"
            android:background="@drawable/draw_pref_action"
            android:visibility="invisible" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/actionButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/draw_pref_action" />

    <RelativeLayout
        android:id="@+id/loadingSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/loadLogo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:src="@drawable/draw_floating_widgets" />

        <ProgressBar
            android:id="@+id/loadingProgressltr"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-15dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"/>

        <TextView
            android:id="@+id/gx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="79dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="7dp"
            android:shadowColor="@android:color/black"
            android:shadowRadius="25"
            android:text="@string/floatingWidget"
            android:textColor="@color/default_color"
            android:textSize="53sp"/>
    </RelativeLayout>

</RelativeLayout>
