<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogueView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogue_rounded_background">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/teardropShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/teardropImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/droplet_icon"/>

            <TextView
                android:id="@+id/teardropText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/teardropImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="@string/droplet"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circleShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/teardropShape"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/circleImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/circle_icon"/>

            <TextView
                android:id="@+id/circleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/circleImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="@string/circle"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/squareShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/circleShape"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/squareImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/square_icon"/>

            <TextView
                android:id="@+id/squareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/squareImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="@string/square"
                android:textSize="17sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/squircleShape"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/squareShape"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/squircleImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="3dp"
                android:src="@drawable/squircle_icon"/>

            <TextView
                android:id="@+id/squircleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/squircleImage"
                android:fontFamily="monospace"
                android:padding="13dp"
                android:text="@string/squircle"
                android:textSize="17sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/noShape"
            android:layout_width="113dp"
            android:layout_height="53dp"
            android:layout_below="@id/squircleShape"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:text="@string/noshape"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/customIconPack"
            android:layout_width="173dp"
            android:layout_height="53dp"
            android:layout_below="@id/squircleShape"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:background="@android:color/transparent"
            android:text="@string/iconPack"
            android:textSize="15sp"/>

    </RelativeLayout>
</ScrollView>