<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/default_color">
    <item
        android:id="@+id/backtemp"
        android:bottom="2dp"
        android:left="3dp"
        android:right="3dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/trans_black"/>
            <corners
                android:radius="7dp"/>
        </shape>
    </item>
    <item
        android:id="@android:id/mask"
        android:bottom="2dp"
        android:left="3dp"
        android:right="3dp"
        android:top="2dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/default_color_trans"/>
            <corners android:radius="7dp"/>
        </shape>
    </item>
</ripple>