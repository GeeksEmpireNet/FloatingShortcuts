<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/default_color">
    <item
        android:id="@+id/backgroundItem">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/darker"
                android:centerY="0.83"
                android:startColor="@color/darker"/>
        </shape>
    </item>
    <item
        android:id="@+id/foregroundItem"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/default_color"/>
        </shape>
    </item>
    <item
        android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/default_color"/>
        </shape>
    </item>
</ripple>