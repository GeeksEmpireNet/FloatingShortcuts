<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fullItemView"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/ripple_effect"
    android:clickable="true">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/appIconView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/appNameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appIconView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:paddingStart="7dp"
        android:paddingTop="2dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        android:text="@string/app_name"
        android:textColor="@color/dark"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/recoveryIndicator"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_above="@id/appNameView"
        android:layout_marginStart="47dp"
        android:background="@drawable/draw_recovery_indicator"
        android:visibility="invisible"/>

</RelativeLayout>