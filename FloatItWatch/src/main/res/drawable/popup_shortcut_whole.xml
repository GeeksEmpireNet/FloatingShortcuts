<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/default_color">
    <item
        android:id="@+id/backgroundTemporary"
        android:bottom="1dp"
        android:left="3dp"
        android:right="3dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lighter"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:id="@android:id/mask"
        android:bottom="1dp"
        android:left="3dp"
        android:right="3dp"
        android:top="1dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/default_color_trans"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</ripple>